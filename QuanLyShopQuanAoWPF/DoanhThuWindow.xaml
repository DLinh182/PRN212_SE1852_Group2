<Window x:Class="QuanLyShopQuanAoWPF.DoanhThuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thống kê doanh thu" Height="450" Width="808" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="THỐNG KÊ DOANH THU" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
        <DataGrid x:Name="dgDoanhThu" Grid.Row="1" AutoGenerateColumns="False" Height="220" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã HD" Binding="{Binding MaHd}" Width="*"/>
                <DataGridTextColumn Header="Ngày bán" Binding="{Binding NgayBan}" Width="*"/>
                <DataGridTextColumn Header="Tổng tiền" Binding="{Binding TongThanhToan}" Width="*"/>
                <DataGridTextColumn Header="Trạng thái" Binding="{Binding TrangThai}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Từ ngày:" VerticalAlignment="Center"/>
            <DatePicker x:Name="dpTuNgay" Width="120" Margin="0,0,10,0"/>
            <TextBlock Text="Đến ngày:" VerticalAlignment="Center"/>
            <DatePicker x:Name="dpDenNgay" Width="120" Margin="0,0,10,0"/>
            <Button Content="Xem" Width="70" Margin="0,0,10,0" Click="BtnXem_Click"/>
            <Button Content="Thống kê" Width="90" Margin="0,0,10,0" Click="BtnThongKe_Click"/>
            <TextBlock Text="Tổng doanh thu:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtTongDoanhThu" Width="120" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Window> 