<Window x:Class="QuanLyShopQuanAoWPF.QuanLyNhapKhoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý nhập kho" Height="500" Width="1137" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="QUẢN LÝ NHẬP KHO" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
        <DataGrid x:Name="dgNhapKho" Grid.Row="1" AutoGenerateColumns="False" Height="250" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã phiếu" Binding="{Binding MaPhieu}" Width="*"/>
                <DataGridTextColumn Header="Mã SP" Binding="{Binding MaSp}" Width="*"/>
                <DataGridTextColumn Header="Tên SP" Binding="{Binding TenSp}" Width="2*"/>
                <DataGridTextColumn Header="Số lượng" Binding="{Binding SoLuong}" Width="*"/>
                <DataGridTextColumn Header="Ngày nhập" Binding="{Binding NgayNhap}" Width="*"/>
                <DataGridTextColumn Header="Nhà cung cấp" Binding="{Binding NhaCungCap}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox x:Name="txtMaPhieu" Width="80" Margin="0,0,10,0"/>
            <TextBox x:Name="txtMaSp" Width="80" Margin="0,0,10,0"/>
            <TextBox x:Name="txtTenSp" Width="150" Margin="0,0,10,0"/>
            <TextBox x:Name="txtSoLuong" Width="80" Margin="0,0,10,0"/>
            <TextBox x:Name="txtNgayNhap" Width="100" Margin="0,0,10,0"/>
            <TextBox x:Name="txtNhaCungCap" Width="120" Margin="0,0,10,0"/>
            <Button Content="Thêm" Width="70" Margin="0,0,10,0" Click="BtnThem_Click"/>
            <Button Content="Sửa" Width="70" Margin="0,0,10,0" Click="BtnSua_Click"/>
            <Button Content="Xóa" Width="70" Margin="0,0,10,0" Click="BtnXoa_Click"/>
            <TextBox x:Name="txtTimKiem" Width="120" Margin="0,0,10,0"/>
            <Button Content="Tìm" Width="60" Click="BtnTimKiem_Click"/>
        </StackPanel>
    </Grid>
</Window> 