<Window x:Class="QuanLyShopQuanAoWPF.QuanLySanPhamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý sản phẩm" Height="500" Width="1069" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="QUẢN LÝ SẢN PHẨM" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
        <DataGrid x:Name="dgSanPham" Grid.Row="1" AutoGenerateColumns="False" Height="250" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã SP" Binding="{Binding MaSp}" Width="*"/>
                <DataGridTextColumn Header="Tên SP" Binding="{Binding TenSp}" Width="2*"/>
                <DataGridTextColumn Header="Giá bán" Binding="{Binding GiaBan}" Width="*"/>
                <DataGridTextColumn Header="Số lượng" Binding="{Binding SoLuongTon}" Width="*"/>
                <DataGridTextColumn Header="Loại" Binding="{Binding MaL}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox x:Name="txtMaSp" Width="80" Margin="0,0,10,0"/>
            <TextBox x:Name="txtTenSp" Width="150" Margin="0,0,10,0"/>
            <TextBox x:Name="txtGiaBan" Width="80" Margin="0,0,10,0"/>
            <TextBox x:Name="txtSoLuong" Width="80" Margin="0,0,10,0"/>
            <TextBox x:Name="txtMaL" Width="80" Margin="0,0,10,0"/>
            <Button Content="Thêm" Width="70" Margin="0,0,10,0" Click="BtnThem_Click"/>
            <Button Content="Sửa" Width="70" Margin="0,0,10,0" Click="BtnSua_Click"/>
            <Button Content="Xóa" Width="70" Margin="0,0,10,0" Click="BtnXoa_Click"/>
            <TextBox x:Name="txtTimKiem" Width="120" Margin="0,0,10,0"/>
            <Button Content="Tìm" Width="60" Click="BtnTimKiem_Click"/>
        </StackPanel>
    </Grid>
</Window> 