<Window x:Class="QuanLyShopQuanAoWPF.QuanLyHoaDonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý hóa đơn" Height="500" Width="1173" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="QUẢN LÝ HÓA ĐƠN" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
        <DataGrid x:Name="dgHoaDon" Grid.Row="1" AutoGenerateColumns="False" Height="250" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã HD" Binding="{Binding MaHd}" Width="*"/>
                <DataGridTextColumn Header="Mã NV" Binding="{Binding MaNv}" Width="*"/>
                <DataGridTextColumn Header="Mã KH" Binding="{Binding MaKh}" Width="*"/>
                <DataGridTextColumn Header="Ngày bán" Binding="{Binding NgayBan}" Width="*"/>
                <DataGridTextColumn Header="Tổng tiền" Binding="{Binding TongThanhToan}" Width="*"/>
                <DataGridTextColumn Header="Trạng thái" Binding="{Binding TrangThai}" Width="*"/>
                <DataGridTextColumn Header="Hình thức" Binding="{Binding HinhThucThanhToan}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox x:Name="txtMaHd" Width="80" Margin="0,0,10,0"/>
            <TextBox x:Name="txtMaNv" Width="80" Margin="0,0,10,0"/>
            <TextBox x:Name="txtMaKh" Width="80" Margin="0,0,10,0"/>
            <TextBox x:Name="txtNgayBan" Width="100" Margin="0,0,10,0"/>
            <TextBox x:Name="txtTongTien" Width="100" Margin="0,0,10,0"/>
            <TextBox x:Name="txtTrangThai" Width="100" Margin="0,0,10,0"/>
            <TextBox x:Name="txtHinhThuc" Width="100" Margin="0,0,10,0"/>
            <Button Content="Thêm" Width="70" Margin="0,0,10,0" Click="BtnThem_Click"/>
            <Button Content="Sửa" Width="70" Margin="0,0,10,0" Click="BtnSua_Click"/>
            <Button Content="Xóa" Width="70" Margin="0,0,10,0" Click="BtnXoa_Click"/>
            <TextBox x:Name="txtTimKiem" Width="120" Margin="0,0,10,0"/>
            <Button Content="Tìm" Width="60" Click="BtnTimKiem_Click"/>
        </StackPanel>
    </Grid>
</Window> 