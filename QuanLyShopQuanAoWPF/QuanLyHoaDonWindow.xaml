<Window x:Class="QuanLyShopQuanAoWPF.QuanLyHoaDonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:QuanLyShopQuanAoWPF"
        WindowState="Maximized"
        Title="Quản Lý Hoá Đơn" Height="1050" Width="1778" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <DockPanel>
        <local:UcMenuChucNang DockPanel.Dock="Top"/>
        <!-- Phần còn lại giữ nguyên -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!-- Tiêu đề -->
            <Border Grid.ColumnSpan="2" Grid.Row="0" Background="#FFF">
                <TextBlock Text="QUẢN LÝ HOÁ ĐƠN" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <!-- Panel công cụ bên phải -->
            <StackPanel Grid.Column="1" Background="#F5F5F5" Grid.RowSpan="2"/>
            <!-- Nội dung chính -->
            <Grid Grid.Column="0" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="405"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- Thông tin hoá đơn -->
                <Border BorderBrush="Gray" BorderThickness="0,0,0,1" Grid.Row="0" Padding="10">
                    <TextBlock Text="Thông tin hoá đơn" FontSize="16" FontWeight="Bold"/>
                </Border>
                <!-- Bộ lọc và trạng thái -->
                <StackPanel Orientation="Horizontal" Grid.Row="1" VerticalAlignment="Center" Margin="10,0,0,0">
                    <TextBlock Text="Trạng thái:" VerticalAlignment="Center" FontSize="14"/>
                    <ComboBox x:Name="cboTrangThai" Width="220" Height="30" Margin="10,0,0,0" SelectionChanged="cboTrangThai_SelectionChanged_1"/>
                    <!-- Tổng doanh thu, chuyển khoản, tiền mặt -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="100,0,0,0">
                        <TextBlock Text="Doanh thu:" FontWeight="Bold" Foreground="OrangeRed" FontSize="14" Margin="20,0,0,0"/>
                        <TextBlock x:Name="lbTongDoanhThu" FontWeight="Bold" Foreground="Tomato" FontSize="14" Margin="5,0,0,0"/>
                        <TextBlock Text="Chuyển khoản:" FontWeight="Bold" FontSize="14" Margin="20,0,0,0"/>
                        <TextBlock x:Name="lbCK" FontWeight="Bold" FontSize="14" Margin="5,0,0,0"/>
                        <TextBlock Text="Tiền mặt:" FontWeight="Bold" FontSize="14" Margin="20,0,0,0"/>
                        <TextBlock x:Name="lbTM" FontWeight="Bold" FontSize="14" Margin="5,0,0,0"/>
                    </StackPanel>
                </StackPanel>
                <!-- DataGrid hoá đơn -->
                <DataGrid x:Name="dgHoaDon" Grid.Row="2" AutoGenerateColumns="False" Margin="0,5,0,0" SelectionMode="Single" SelectionUnit="FullRow">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã hoá đơn" Binding="{Binding MaHd}"/>
                        <DataGridTextColumn Header="Mã nhân viên" Binding="{Binding MaNv}"/>
                        <DataGridTextColumn Header="Mã khách hàng" Binding="{Binding MaKh}"/>
                        <DataGridTextColumn Header="Ngày bán" Binding="{Binding NgayBan}"/>
                        <DataGridTextColumn Header="Tổng thanh toán" Binding="{Binding TongThanhToan}"/>
                        <DataGridTextColumn Header="Trạng thái" Binding="{Binding TrangThai}"/>
                        <DataGridTextColumn Header="Thanh Toán" Binding="{Binding HinhThucThanhToan}"/>
                        <DataGridTextColumn Header="Ghi chú" Binding="{Binding GhiChu}"/>
                    </DataGrid.Columns>
                </DataGrid>
                <!-- Chi tiết hoá đơn -->
                <Border BorderBrush="Gray" BorderThickness="0,0,0,1" Grid.Row="3" Padding="10">
                    <TextBlock Text="Chi tiết hoá đơn" FontSize="16" FontWeight="Bold"/>
                </Border>
                <DataGrid x:Name="dgCTHD" Grid.Row="4" AutoGenerateColumns="False" Margin="0,5,0,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã hoá đơn" Binding="{Binding MaHD}"/>
                        <DataGridTextColumn Header="Mã sản phẩm" Binding="{Binding MaSP}"/>
                        <DataGridTextColumn Header="Size" Binding="{Binding KichCo}"/>
                        <DataGridTextColumn Header="Số lượng" Binding="{Binding SoLuong}"/>
                        <DataGridTextColumn Header="Giá bán" Binding="{Binding GiaBan}"/>
                        <DataGridTextColumn Header="Thành tiền" Binding="{Binding ThanhTien}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </DockPanel>
</Window> 