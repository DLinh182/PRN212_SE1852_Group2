<Window x:Class="QuanLyShopQuanAoWPF.QuanLyKhachHangWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý khách hàng" Height="500" Width="1191" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="QUẢN LÝ KHÁCH HÀNG" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
        <DataGrid x:Name="dgKhachHang" Grid.Row="1" AutoGenerateColumns="False" Height="250" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã KH" Binding="{Binding MaKh}" Width="*"/>
                <DataGridTextColumn Header="Tên KH" Binding="{Binding TenKh}" Width="2*"/>
                <DataGridTextColumn Header="SĐT" Binding="{Binding SdtKh}" Width="*"/>
                <DataGridTextColumn Header="Địa chỉ" Binding="{Binding DiaChiKh}" Width="2*"/>
                <DataGridTextColumn Header="Giới tính" Binding="{Binding GioiTinhKh}" Width="*"/>
                <DataGridTextColumn Header="Năm sinh" Binding="{Binding NamSinhKh}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox x:Name="txtMaKh" Width="80" Margin="0,0,10,0"/>
            <TextBox x:Name="txtTenKh" Width="150" Margin="0,0,10,0"/>
            <TextBox x:Name="txtSdtKh" Width="100" Margin="0,0,10,0"/>
            <TextBox x:Name="txtDiaChiKh" Width="150" Margin="0,0,10,0"/>
            <TextBox x:Name="txtGioiTinhKh" Width="80" Margin="0,0,10,0"/>
            <TextBox x:Name="txtNamSinhKh" Width="80" Margin="0,0,10,0"/>
            <Button Content="Thêm" Width="70" Margin="0,0,10,0" Click="BtnThem_Click"/>
            <Button Content="Sửa" Width="70" Margin="0,0,10,0" Click="BtnSua_Click"/>
            <Button Content="Xóa" Width="70" Margin="0,0,10,0" Click="BtnXoa_Click"/>
            <TextBox x:Name="txtTimKiem" Width="120" Margin="0,0,10,0"/>
            <Button Content="Tìm" Width="60" Click="BtnTimKiem_Click"/>
        </StackPanel>
    </Grid>
</Window> 