<Window x:Class="QuanLyShopQuanAoWPF.QuanLyNhanVienWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:QuanLyShopQuanAoWPF"
        Title="Quản Lý Nhân Viên" Height="900" Width="1700" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <DockPanel>
        <local:UcMenuChucNang DockPanel.Dock="Top"/>
        <!-- Tiêu đề -->
        <Border Grid.ColumnSpan="2" Grid.Row="0" Background="#FFF">
            <TextBlock Text="QUẢN LÝ NHÂN VIÊN" FontSize="26" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <!-- GroupBox Thông tin nhân viên -->
        <GroupBox Header="Thông tin nhân viên" Grid.Row="1" Grid.Column="0" Margin="10,10,10,10" FontSize="16">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="220"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Mã nhân viên :" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="txtMaNV" Grid.Row="0" Grid.Column="1" Height="28"/>
                <TextBlock Text="Tên nhân viên :" Grid.Column="2" VerticalAlignment="Center" Margin="50,0,0,0"/>
                <TextBox x:Name="txtTenNV" Grid.Row="0" Grid.Column="3" Height="28"/>
                <TextBlock Text="Giới tính:" Grid.Column="4" VerticalAlignment="Center" Margin="63,0,0,0"/>
                <ComboBox x:Name="cboGioiTinh" Grid.Row="0" Grid.Column="5" Height="28"/>
                <TextBlock Text="Số điện thoại:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="txtSDTNV" Grid.Row="1" Grid.Column="1" Height="28"/>
                <TextBlock Text="Ngày sinh:" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" Margin="50,0,0,0"/>
                <TextBox x:Name="txtNgaySinh" Grid.Row="1" Grid.Column="3" Height="28"/>
                <TextBlock Text="Địa chỉ:" Grid.Row="1" Grid.Column="4" VerticalAlignment="Center" Margin="63,0,0,0"/>
                <TextBox x:Name="txtDiaChi" Grid.Row="1" Grid.Column="5" Height="28"/>
                <TextBlock Text="CCCD/CMND:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="txtCCCD" Grid.Row="2" Grid.Column="1" Height="28"/>
                <TextBlock Text="Năm vào làm:" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" Margin="50,0,0,0"/>
                <TextBox x:Name="txtNamVaoLam" Grid.Row="2" Grid.Column="3" Height="28"/>
                <TextBlock Text="Lương:" Grid.Row="2" Grid.Column="4" VerticalAlignment="Center" Margin="63,0,0,0"/>
                <TextBox x:Name="txtLuong" Grid.Row="2" Grid.Column="5" Height="28"/>
                <TextBlock Text="Mã tài khoản:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
                <ComboBox x:Name="cboMaTK" Grid.Row="3" Grid.Column="1" Height="28"/>
            </Grid>
        </GroupBox>
        <!-- Panel công cụ bên phải -->
        <Grid Grid.Row="1" Grid.Column="1" Margin="0,10,0,0" Background="#F5F5F5" VerticalAlignment="Top" HorizontalAlignment="Center" Height="202" Width="304">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="0,0,0,1" Padding="10" Margin="0,0,0,10">
                <TextBlock Text="Công cụ" FontSize="16" FontWeight="Bold" TextAlignment="Center"/>
            </Border>
            <Grid Grid.Row="1" Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <!-- Nhóm thao tác nhân viên và tài khoản, chia đều 3 cột -->
                <Button x:Name="btnThem" Content="Thêm nhân viên" Grid.Row="0" Grid.Column="0" Margin="10,5"/>
                <Button x:Name="btnXoa" Content="Xoá nhân viên" Grid.Row="0" Grid.Column="1" Margin="10,5"/>
                <Button x:Name="btnSua" Content="Sửa nhân viên" Grid.Row="0" Grid.Column="2" Margin="10,5"/>
                <Button x:Name="btnLuu" Content="Lưu nhân viên" Grid.Row="1" Grid.Column="0" Margin="10,5" IsEnabled="False"/>
                <Button x:Name="btnReset" Content="Reset công cụ" Grid.Row="1" Grid.Column="1" Margin="10,5"/>
                <Button x:Name="btnTaoTK" Content="Tạo tài khoản" Grid.Row="1" Grid.Column="2" Margin="10,5"/>
                <Button x:Name="btnXoaTK" Content="Xoá tài khoản" Grid.Row="2" Grid.Column="0" Margin="10,5"/>
                <Button x:Name="btnSuaTK" Content="Sửa tài khoản" Grid.Row="2" Grid.Column="1" Margin="10,5"/>
                <Button x:Name="btnLuuTK" Content="Lưu tài khoản" Grid.Row="2" Grid.Column="2" Margin="10,5" IsEnabled="False"/>
            </Grid>
        </Grid>
        <!-- GroupBox tìm kiếm -->
        <GroupBox Header="Tìm kiếm theo tên nhân viên" Grid.Row="2" Grid.Column="0" Margin="10,0,10,0" FontSize="14">
            <DockPanel LastChildFill="False">
                <TextBlock Text="Nhập tên nhân viên:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <TextBox x:Name="txtTimKiem" Width="250" Height="28" Margin="10,0,0,0"/>
                <Button x:Name="btnTimKiem" Content="Tìm kiếm" Width="100" Height="28" Margin="10,0,0,0"/>
            </DockPanel>
        </GroupBox>
        <!-- DataGrid danh sách nhân viên và tài khoản -->
        <Grid Grid.Row="3" Grid.ColumnSpan="2" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="420"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Danh sách nhân viên" FontSize="16" FontWeight="Bold" Grid.Row="0" Grid.Column="0" Margin="0,0,0,5"/>
            <TextBlock Text="Tài khoản" FontSize="16" FontWeight="Bold" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5"/>
            <DataGrid x:Name="dgNhanVien" AutoGenerateColumns="False" Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã nhân viên" Binding="{Binding MaNV}"/>
                    <DataGridTextColumn Header="Họ tên" Binding="{Binding TenNV}"/>
                    <DataGridTextColumn Header="Số điện thoại" Binding="{Binding SDTNV}"/>
                    <DataGridTextColumn Header="Ngày sinh" Binding="{Binding NgaySinhNV}"/>
                    <DataGridTextColumn Header="Địa chỉ" Binding="{Binding DiaChiNV}"/>
                    <DataGridTextColumn Header="Giới tính" Binding="{Binding GioiTinhNV}"/>
                    <DataGridTextColumn Header="CCCD/CMND" Binding="{Binding CCCD}"/>
                    <DataGridTextColumn Header="Năm vào làm" Binding="{Binding NVL}"/>
                    <DataGridTextColumn Header="Lương" Binding="{Binding Luong}"/>
                    <DataGridTextColumn Header="Mã tài khoản" Binding="{Binding MATK}"/>
                </DataGrid.Columns>
            </DataGrid>
            <DataGrid x:Name="dgTaiKhoan" AutoGenerateColumns="False" Grid.Row="1" Grid.Column="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã tài khoản" Binding="{Binding MaTKDN}"/>
                    <DataGridTextColumn Header="Tài khoản" Binding="{Binding TAIKHOAN}"/>
                    <DataGridTextColumn Header="Mật khẩu" Binding="{Binding MATKHAU}"/>
                    <DataGridTextColumn Header="Loại tài khoản" Binding="{Binding LOAITK}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </DockPanel>
</Window> 