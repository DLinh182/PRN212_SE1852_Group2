<Window x:Class="QuanLyShopQuanAoWPF.QuanLyNhanVienWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý nhân viên" Height="500" Width="1227" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="QUẢN LÝ NHÂN VIÊN" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
        <DataGrid x:Name="dgNhanVien" Grid.Row="1" AutoGenerateColumns="False" Height="250" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã NV" Binding="{Binding MaNv}" Width="*"/>
                <DataGridTextColumn Header="Tên NV" Binding="{Binding TenNv}" Width="2*"/>
                <DataGridTextColumn Header="SĐT" Binding="{Binding SdtNv}" Width="*"/>
                <DataGridTextColumn Header="Ngày sinh" Binding="{Binding NgaySinhNv}" Width="*"/>
                <DataGridTextColumn Header="Địa chỉ" Binding="{Binding DiaChiNv}" Width="2*"/>
                <DataGridTextColumn Header="Giới tính" Binding="{Binding GioiTinhNv}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox x:Name="txtMaNv" Width="80" Margin="0,0,10,0"/>
            <TextBox x:Name="txtTenNv" Width="150" Margin="0,0,10,0"/>
            <TextBox x:Name="txtSdtNv" Width="100" Margin="0,0,10,0"/>
            <TextBox x:Name="txtNgaySinhNv" Width="100" Margin="0,0,10,0"/>
            <TextBox x:Name="txtDiaChiNv" Width="150" Margin="0,0,10,0"/>
            <TextBox x:Name="txtGioiTinhNv" Width="80" Margin="0,0,10,0"/>
            <Button Content="Thêm" Width="70" Margin="0,0,10,0" Click="BtnThem_Click"/>
            <Button Content="Sửa" Width="70" Margin="0,0,10,0" Click="BtnSua_Click"/>
            <Button Content="Xóa" Width="70" Margin="0,0,10,0" Click="BtnXoa_Click"/>
            <TextBox x:Name="txtTimKiem" Width="120" Margin="0,0,10,0"/>
            <Button Content="Tìm" Width="60" Click="BtnTimKiem_Click"/>
        </StackPanel>
    </Grid>
</Window> 