<Window x:Class="QuanLyShopQuanAoWPF.ThongTinSPWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông tin sản phẩm" Height="425" Width="773" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="imgSanPham" Grid.Column="0" Height="200" Width="200" Margin="0,0,20,0"/>
        <StackPanel Grid.Column="1" VerticalAlignment="Top">
            <TextBlock Text="THÔNG TIN SẢN PHẨM" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Mã SP:" Margin="0,0,0,2"/>
            <TextBox x:Name="txtMaSp" IsReadOnly="True" Margin="0,0,0,6"/>
            <TextBlock Text="Tên SP:" Margin="0,0,0,2"/>
            <TextBox x:Name="txtTenSp" IsReadOnly="True" Margin="0,0,0,6"/>
            <TextBlock Text="Giá bán:" Margin="0,0,0,2"/>
            <TextBox x:Name="txtGiaBan" IsReadOnly="True" Margin="0,0,0,6"/>
            <TextBlock Text="Số lượng tồn:" Margin="0,0,0,2"/>
            <TextBox x:Name="txtSoLuongTon" IsReadOnly="True" Margin="0,0,0,6"/>
            <TextBlock Text="Loại:" Margin="0,0,0,2"/>
            <TextBox x:Name="txtLoai" IsReadOnly="True" Margin="0,0,0,6"/>
            <TextBlock Text="Mô tả:" Margin="0,0,0,2"/>
            <TextBox x:Name="txtMoTa" Height="60" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True" Margin="0,0,0,6"/>
            <Button Content="Đóng" Width="80" HorizontalAlignment="Right" Margin="0,10,0,0" Click="BtnDong_Click"/>
        </StackPanel>
    </Grid>
</Window> 