<Window x:Class="QuanLyShopQuanAoWPF.TaoDanhMucWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tạo danh mục mới" Height="220" Width="350" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Mã danh mục:"/>
        <TextBox x:Name="txtMaDM" Margin="0,0,0,10"/>
        <TextBlock Text="Tên danh mục:"/>
        <TextBox x:Name="txtTenDM" Margin="0,0,0,10"/>
        <Button Content="Lưu" Width="100" HorizontalAlignment="Right" Click="BtnLuu_Click"/>
    </StackPanel>
</Window> 