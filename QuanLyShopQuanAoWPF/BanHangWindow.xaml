<Window x:Class="QuanLyShopQuanAoWPF.BanHangWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bán hàng" Height="600" Width="1035" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="BÁN HÀNG" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Grid.ColumnSpan="2" Margin="0,0,0,10"/>
        <!-- Bảng sản phẩm -->
        <DataGrid x:Name="dgSanPham" Grid.Row="1" Grid.Column="0" AutoGenerateColumns="False" Height="350" Margin="0,0,10,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã SP" Binding="{Binding MaSp}" Width="*"/>
                <DataGridTextColumn Header="Tên SP" Binding="{Binding TenSp}" Width="2*"/>
                <DataGridTextColumn Header="Giá bán" Binding="{Binding GiaBan}" Width="*"/>
                <DataGridTextColumn Header="Số lượng tồn" Binding="{Binding SoLuongTon}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <!-- Bảng giỏ hàng -->
        <DataGrid x:Name="dgGioHang" Grid.Row="1" Grid.Column="1" AutoGenerateColumns="False" Height="350">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã SP" Binding="{Binding MaSp}" Width="*"/>
                <DataGridTextColumn Header="Tên SP" Binding="{Binding TenSp}" Width="2*"/>
                <DataGridTextColumn Header="Số lượng" Binding="{Binding SoLuong}" Width="*"/>
                <DataGridTextColumn Header="Giá bán" Binding="{Binding GiaBan}" Width="*"/>
                <DataGridTextColumn Header="Thành tiền" Binding="{Binding ThanhTien}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <!-- Các trường nhập và nút thao tác -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox x:Name="txtMaSp" Width="80" Margin="0,0,10,0"/>
            <TextBox x:Name="txtTenSp" Width="150" Margin="0,0,10,0"/>
            <TextBox x:Name="txtSoLuong" Width="80" Margin="0,0,10,0"/>
            <Button Content="Thêm vào giỏ" Width="110" Margin="0,0,10,0" Click="BtnThemVaoGio_Click"/>
            <Button Content="Xóa khỏi giỏ" Width="110" Margin="0,0,10,0" Click="BtnXoaKhoiGio_Click"/>
            <Button Content="Thanh toán" Width="110" Margin="0,0,10,0" Click="BtnThanhToan_Click"/>
            <TextBlock Text="Tổng tiền:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtTongTien" Width="120" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Window> 